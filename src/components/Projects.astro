---
import Java from "./icons/Java.astro";
import LinkButton from "./LinkButton.astro";
import GitHubIcon from "./icons/GitHub.astro";
import WebIcon from "./icons/Web.astro";

const TAGS = {
  JAVA: {
    name: "Java",
    class: "bg-[#503B31] text-white",
    icon: Java,
  },
};

const PROJECTS = [
  {
    title: "One to Wand",
    description:
      "Spring API for magical algorithms and tailored reads.",
    link: "https://github.com/jisumov/one-to-wand",
    github: "https://github.com/jisumov/one-to-wand",
    image: "/projects/one-to-wand.webp",
    tags: [TAGS.JAVA],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, github, link }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          class="rounded shadow-2xl shadow-white/10"
          src={image}
          alt={`Screenshot from project ${image}`}
        />
        <footer class="flex gap-x-4 mt-4 items-end justify-start">
          {github && (
            <LinkButton href={github}>
              <GitHubIcon class="size-4 md:size-6" />
              Source Code
            </LinkButton>
          )}
          <LinkButton href={link}>
            <WebIcon class="size-4 md:size-6" />
            Live View
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
